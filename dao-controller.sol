	/**
	 * @notice Join community using the currently connected wallet address.
	 */
	function communityJoin(uint256 id) external onlyProxy returns (bool) {
		Community storage comm = fetchAssertCommunity(id, "Cannot join community that does not exist.");
        if(!assertMember(msg.sender, comm)){
            comm.membersAddress[comm.membersAddress.length] = msg.sender;
            return true;
        }else{
            return false;
        }        
	}

    /**
     * @notice check member is exist in that community or not
     */
    function assertMember(address addr, Community storage community) internal onlyProxy view returns(bool){
        bool isMemberOfComm = false;
        for (uint256 index = 0; index < community.membersAddress.length; index++) {
            if(community.membersAddress[index] == addr){
                isMemberOfComm = true;
            }
        } 
        return isMemberOfComm;
    } 

	/**
	 * @notice Leave target community on your currently connected wallet. No effect when target community does
	 * not exist, or caller's address is not a community member.
	 */
	function communityLeave(uint256 id) external onlyProxy returns (bool) {
		Community storage comm = fetchAssertCommunity(id, "Cannot leave community that does not exist.");
		return removeMember(msg.sender, comm);
	}

    /**
     * @notice to remove the member - internal function
     */

    function removeMember(address addr, Community storage community) internal onlyProxy returns (bool){
        bool isRemoved = false;
        for (uint256 index = 0; index < community.membersAddress.length; index++) {
            if(community.membersAddress[index] == addr){
                delete community.membersAddress[index];
                isRemoved = true; 
            }
        }
        return isRemoved;  
    }
