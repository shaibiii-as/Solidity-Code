	/**
	 * @notice Create a Freedom MetaDAO Community using the provided parameters. Caller becomes
	 * the first member and admin automatically if the action succeeds.
	 */
	 
	function communityCreate(string memory name, address[] memory membersAddress) external onlyProxy returns (bool) {
		_CommunityIds.increment();
		uint256 _id = _CommunityIds.current();
		uint256 blockNumber =  block.number;
		uint256 blockTimeStamp = block.timestamp;
        // address [] memory membersAddress;
        membersAddress[membersAddress.length] = msg.sender;
		Community memory communityDetails = Community(
			_id, // bytes32 id;
			CommunityStatus.ACTIVE, // CommunityStatus status;
			name,// string name;
			membersAddress,//  membersAddress[]
			blockNumber,// uint createBlock;
			blockTimeStamp,// uint createTimestamp;
			msg.sender// address creator;
		);
		
		_communities[_id] =  communityDetails;
		emit EvtCommunityCreate(_id, name);
        return true;
	}

